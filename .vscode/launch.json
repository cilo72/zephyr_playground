{
    "version": "0.2.0",
    "configurations": 
    [
        {
          "name": "Zephyr Debug (EVAL-F7)",
          "cwd": "${workspaceRoot}",
          "gdbPath": "${command:zephyr-ide.get-gdb-path}",
          "executable": "${command:zephyr-ide.get-active-build-path}/zephyr/zephyr.elf",
          "request": "launch",
          "type": "cortex-debug",
          "servertype": "openocd",
          "device": "STM32F767ZI",
          "configFiles": [
            "interface/stlink.cfg",
            "target/stm32f7x.cfg"
          ],
          "runToEntryPoint": "main",
          "svdFile": "${zephyr_base}/boards/arm/nucleo_f767zi/nucleo_f767zi.svd",
          "postRestartCommands": [
            "break main", "continue"
          ]
        },        
        {
            "name": "Zephyr IDE: Debug (RP2040)",
            "cwd": "${workspaceRoot}",
            "gdbPath": "${command:zephyr-ide.get-gdb-path}",
            "executable": "${command:zephyr-ide.get-active-build-path}/zephyr/zephyr.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "device": "RP2040",
            "configFiles": [
                "interface/cmsis-dap.cfg",
                "target/rp2040.cfg"
            ],
            "svdFile": "${workspaceFolder}/../../../modules/hal/rpi_pico/src/rp2040/hardware_regs/rp2040.svd",
            "runToEntryPoint": "main",
            "postRestartCommands": [
                "break main",
                "continue"
            ],
            "openOCDLaunchCommands": [
                "adapter speed 5000"
            ],
        }
    ]
}

